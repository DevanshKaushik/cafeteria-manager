<% if @current_user.role == "customer"
      links = [
        ["Cart", orders_path(target: "cart")],
        ["Orders", orders_path]
      ]
   else
      links = [
        ["Dashboard", dashboard_path],
        ["Cart", orders_path(target: "cart")],
        ["Orders", orders_path]
      ]
   end
%>

<%= render partial: "partials/nav-bar", locals: {
  links: links
 } %>

<main class="menu">

  <% if Menu.active.menu_items.empty? %>
    <h1 class="menu__title">Uff! Nothing available right now</h1>
    <img class="empty-state" src=<%= asset_path("empty_state.svg")%> alt="Food Illustration">
  <% else %>

    <h1 class="menu__title">Order your delicious food</h1>

    <%= render partial: "menu-section", locals: {
      menu_title: "Breakfast",
      menu_items: Menu.active.menu_items.breakfast
    } %>
    <%= render partial: "menu-section", locals: {
      menu_title: "Lunch",
      menu_items: Menu.active.menu_items.lunch
    } %>
    <%= render partial: "menu-section", locals: {
      menu_title: "Dinner",
      menu_items: Menu.active.menu_items.dinner
    } %>

  <% end %>

</main>