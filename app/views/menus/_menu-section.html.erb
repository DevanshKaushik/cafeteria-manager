<% unless menu_items.empty? %>
  <section class="menu__section">
    <h3 class="menu__section--title"><%= menu_title %></h3>

    <div class="menu__items">
      <% menu_items.each do |menu_item| %>
        <div class="menu__item">
          <span class="menu__item--img"></span>

          <div class="menu__item--details">
            <div>
              <p class="menu__item--name"><%= menu_item.name %></p>
              <p class="menu__item--desc"><%= menu_item.description %></p>
            </div>
            <div>
              <p class="menu__item--price">&#x20B9; <%= menu_item.price %></p>

              <%= form_with(url: order_items_path, method: "post") do %>
                <%= hidden_field_tag("menu_item_id", menu_item.id) %>
                <%= submit_tag("Add to cart", class: "btn") %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>